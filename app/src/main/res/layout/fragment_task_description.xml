<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>

    <variable
        name="viewModel"
        type="com.example.to_do_application.model.TasksViewModel"/>
    <variable
        name="DisplayDetailsFragment"
        type="com.example.to_do_application.DisplayDetailsFragment" />

</data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    tools:context=".DisplayDetailsFragment"
    android:layout_height="match_parent"
    android:scrollbars="vertical">


    <EditText
        android:id="@+id/editTaskTitle"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="116dp"
        android:text="@{viewModel.taskTitle}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskDescriptin"
        android:layout_width="171dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="10dp"
        android:text="Task Description"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTaskDetails"
        android:layout_width="334dp"
        android:layout_height="158dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="220dp"
        android:text="@{viewModel.taskDescripton}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editDueDate"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="228dp"
        android:text="@{viewModel.taskDueDate}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/deleteTaskButton"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="51dp"
        android:background="@color/Cyan_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909"
        app:srcCompat="@drawable/ic_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
