<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  >


    <data>
        <variable
            name="viewModel"
            type="com.example.to_do_application.model.TasksViewModel"/>
        <variable
            name="taskDescriptinFragment"
            type="com.example.to_do_application.ui.TaskDescriptionFragment"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".ui.TaskDescriptionFragment"
        android:scrollbars="vertical">

    <TextView
        android:id="@+id/taskDuraation"
        android:layout_width="171dp"
        android:layout_height="22dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="201dp"
        android:text="@string/task_duraation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDueDate"
            android:layout_width="237dp"
            android:layout_height="33dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="135dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/taskDescriptin"
            android:layout_width="171dp"
            android:layout_height="22dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="201dp"
            android:text="@string/task_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/taskDetails"
            android:layout_width="332dp"
            android:layout_height="366dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskDescriptin"
            android:autofillHints="" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
